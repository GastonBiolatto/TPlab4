@model Bomberosfinallab.Models.Asistencia

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Asistencia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ContAsistencia" class="control-label"></label>
                <input asp-for="ContAsistencia" class="form-control" />
                <span asp-validation-for="ContAsistencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CuerpoActivoRefId" class="control-label"></label>
                <select asp-for="CuerpoActivoRefId" class="form-control" asp-items="ViewBag.CuerpoActivoRefId"></select>
                <span asp-validation-for="CuerpoActivoRefId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="fa-solid fa-arrow-rotate-left"></i> Volver atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
